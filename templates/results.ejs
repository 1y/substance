<!--<h2><%= documents.length %> Document<%= documents.length !== 1 ? 's' : '' %></h2>-->
<% if (documents.length > 0) { %>
  <div id="browser">
    
    <div id="documents">
      <% documents.each(function(doc) { %> 
      <div class="document">
        <a class="link load-document toggle-view" href="/<%= doc.get('creator')._id.split('/')[2] %>/<%= doc.get('name') %>" document="<%= doc._id %>" user="<%= doc.get('creator')._id.split('/')[2] %>" name="<%= doc.get('name') %>">
          <div class="image">
            <img src="<%= doc.get('cover') || "/images/document-image-placeholder.png" %>" width="180">
          </div>

          <div class="title">
            <%= doc.get('title') || 'Untitled' %>
          </div>
        </a>

        <div class="author"><a href="/<%= userName(doc.get('creator')) %>"><%= doc.get('creator').get('name') || userName(doc.get('creator')) || doc.get('creator')._id.split('/')[2] %></a></div>
          
        <div class="updated-at"><span>updated </span><%= s.util.prettyDate(doc.get('updated_at')) %></div>
      </div>
      <% }); %>
    </div>
  </div>
<% } else { %>
  <div id="browser">
    <div id="documents">
      <h2>No Documents yet ...</h2>
    </div>
  </div>
<% } %>
