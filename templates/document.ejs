      <div class="document view invite<%= selectedView === 'invite' ? ' selected' : '' %>" view="invite">Invite</div>
      <div class="document view export<%= selectedView === 'export' ? ' selected' : '' %>" view="export">Export</div>
    </div>
  </div>
  
