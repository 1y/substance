<div id="document_content">
  <div id="document">
    <div id="toc_wrapper"></div>
    
    <div class="board">
      <div class="toggle-toc"><div class="label">Contents</div></div>
      
      <div id="document_actions" class="view-actions">
        <a href="/" title="Read Document" class="toggle-show-mode view-action-icon read active"><span>Read</span></a>

        <% if (doc && doc.get('creator')._id === '/user/'+app.username) { %>
          <a href="/" title="Write Document" class="toggle-edit-mode view-action-icon write"><span>Write</span></a>
          <a href="/" title="Delete Document" class="delete-document view-action-icon delete"><span>Delete</span></a>
        <% } %>
        
        <a href="/" title="<%= doc && doc.get('subscribed') ? "Unsubscribe" : "Subscribe document and get notified about updates" %> " class="view-action-icon <%= doc && doc.get('subscribed') ? "unsubscribe-document" : "subscribe-document" %>"><div class="subscription-count"><%= doc && doc.get('subscribers') > 0 ? doc.get('subscribers') : "" %></div><span>Subscribe document and get notified about updates</span></a>
        
      </div>
    </div>
    <div id="document_tree">
    
    </div>
  </div>
</div>
